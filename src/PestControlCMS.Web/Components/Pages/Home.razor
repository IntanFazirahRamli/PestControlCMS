@page "/"

<PageTitle>PestControl CMS</PageTitle>

<div class="max-w-4xl mx-auto px-4 py-16 text-center">
    <div class="w-20 h-20 rounded-2xl bg-emerald-600 flex items-center justify-center mx-auto mb-6 shadow-lg">
        <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
