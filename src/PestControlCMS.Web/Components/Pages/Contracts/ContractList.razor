@page "/contracts"
@rendermode InteractiveAuto
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>Contracts - PestControl CMS</PageTitle>

<div class="max-w-6xl mx-auto px-4 py-8">

    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Pest Control Contracts</h1>
            @if (contracts is not null)
            {
                <p class="text-sm text-gray-500 mt-1">@contracts.Count contract(s) on file</p>
            }
        </div>
        <button @onclick='() => Nav.NavigateTo("/contracts/create")'
                class="px-4 py-2 bg-emerald-600 text-white rounded-lg text-sm font-semibold
                       hover:bg-emerald-700 transition shadow-sm flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Contract
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center items-center py-24">
            <svg class="animate-spin w-8 h-8 text-emerald-500" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/>
            </svg>
        </div>
    }
    else if (contracts is { Count: 0 })
    {
        <div class="text-center py-24 bg-white rounded-2xl border border-gray-200">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586
                         a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="text-gray-500 mb-4">No contracts yet.</p>
            <a href="/contracts/create"
               class="inline-block px-4 py-2 bg-emerald-600 text-white text-sm rounded-lg
                      font-semibold hover:bg-emerald-700 transition">
                Create your first contract
            </a>
        </div>
    }
    else if (contracts is not null)
    {
        <div class="overflow-x-auto rounded-xl shadow border border-gray-200 bg-white">
            <table class="w-full text-sm text-left">
                <thead class="bg-gray-50 text-gray-600 uppercase text-xs tracking-wider border-b border-gray-200">
                    <tr>
                        <th class="px-5 py-3">Customer</th>
                        <th class="px-5 py-3">Property</th>
                        <th class="px-5 py-3">Period</th>
                        <th class="px-5 py-3">Annual Fee</th>
                        <th class="px-5 py-3">Frequency</th>
                        <th class="px-5 py-3">Pests Covered</th>
                        <th class="px-5 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var c in contracts)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-5 py-4 font-medium text-gray-900">@c.CustomerName</td>
                            <td class="px-5 py-4 text-gray-500 max-w-xs truncate" title="@c.PropertyAddress">
                                @c.PropertyAddress
                            </td>
                            <td class="px-5 py-4 text-gray-500 whitespace-nowrap">
                                @c.StartDate.ToString("MMM d, yyyy")<br/>
                                <span class="text-xs text-gray-400">to @c.EndDate.ToString("MMM d, yyyy")</span>
                            </td>
                            <td class="px-5 py-4 text-gray-900 font-semibold">
                                @c.AnnualFee.ToString("C")
                            </td>
                            <td class="px-5 py-4">
                                <span class="px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700">
                                    @c.ServiceFrequency
                                </span>
                            </td>
                            <td class="px-5 py-4 text-gray-500 text-xs">@FormatPests(c.PestTypes)</td>
                            <td class="px-5 py-4">
                                <button @onclick="() => DeleteContract(c.Id)"
                                        class="text-red-400 hover:text-red-600 text-xs font-medium transition">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mt-4 px-4 py-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700">
            @errorMessage
        </div>
    }
</div>

@code {
    private List<ContractResponse>? contracts;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadContractsAsync();
    }

    private async Task LoadContractsAsync()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            contracts = await Http.GetFromJsonAsync<List<ContractResponse>>("/api/contracts");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load contracts: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteContract(Guid id)
    {
        var response = await Http.DeleteAsync($"/api/contracts/{id}");
        if (response.IsSuccessStatusCode)
            await LoadContractsAsync();
        else
            errorMessage = "Failed to delete contract.";
    }

    private static string FormatPests(PestType flags) =>
        Enum.GetValues<PestType>()
            .Where(p => p != PestType.None && flags.HasFlag(p))
            .Select(p => p.ToString())
            .DefaultIfEmpty("None")
            .Aggregate((a, b) => $"{a}, {b}");
}
