@page "/contracts/create"
@rendermode InteractiveAuto
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>New Pest Control Contract</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 py-10 px-4">
    <div class="max-w-3xl mx-auto">

        <!-- Header -->
        <div class="flex items-center gap-3 mb-8">
            <div class="w-12 h-12 rounded-xl bg-emerald-600 flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586
                             a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-gray-900">New Contract</h1>
                <p class="text-sm text-gray-500">Create a pest control service agreement</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <EditForm Model="model" OnValidSubmit="HandleSubmit" class="divide-y divide-gray-100">
                <DataAnnotationsValidator/>

                <!-- Customer Information -->
                <section class="px-8 py-6">
                    <h2 class="text-sm font-semibold text-emerald-700 uppercase tracking-wider mb-4">
                        Customer Information
                    </h2>
                    <div class="grid grid-cols-1 gap-5">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Customer Name <span class="text-red-500">*</span>
                            </label>
                            <InputText @bind-Value="model.CustomerName"
                                       placeholder="e.g. Acme Property Group"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                              focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                              transition text-sm"/>
                            <ValidationMessage For="() => model.CustomerName" class="text-red-500 text-xs mt-1"/>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Property Address <span class="text-red-500">*</span>
                            </label>
                            <InputText @bind-Value="model.PropertyAddress"
                                       placeholder="e.g. 42 Sunset Blvd, Springfield, ST 12345"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                              focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                              transition text-sm"/>
                            <ValidationMessage For="() => model.PropertyAddress" class="text-red-500 text-xs mt-1"/>
                        </div>
                    </div>
                </section>

                <!-- Contract Dates & Fee -->
                <section class="px-8 py-6">
                    <h2 class="text-sm font-semibold text-emerald-700 uppercase tracking-wider mb-4">
                        Contract Terms
                    </h2>
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Start Date <span class="text-red-500">*</span>
                            </label>
                            <InputDate @bind-Value="model.StartDate"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                              focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                              transition text-sm"/>
                            <ValidationMessage For="() => model.StartDate" class="text-red-500 text-xs mt-1"/>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                End Date <span class="text-red-500">*</span>
                            </label>
                            <InputDate @bind-Value="model.EndDate"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                              focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                              transition text-sm"/>
                            <ValidationMessage For="() => model.EndDate" class="text-red-500 text-xs mt-1"/>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Annual Fee (USD) <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 font-medium">$</span>
                                <InputNumber @bind-Value="model.AnnualFee"
                                             placeholder="0.00"
                                             class="w-full pl-7 pr-4 py-2.5 rounded-lg border border-gray-300
                                                    focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                                    transition text-sm"/>
                            </div>
                            <ValidationMessage For="() => model.AnnualFee" class="text-red-500 text-xs mt-1"/>
                        </div>
                    </div>
                </section>

                <!-- Service Details -->
                <section class="px-8 py-6">
                    <h2 class="text-sm font-semibold text-emerald-700 uppercase tracking-wider mb-4">
                        Service Details
                    </h2>

                    <div class="mb-5">
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Service Frequency <span class="text-red-500">*</span>
                        </label>
                        <InputSelect @bind-Value="model.ServiceFrequency"
                                     class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                            focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                            transition text-sm bg-white">
                            <option value="">— Select frequency —</option>
                            @foreach (var freq in Enum.GetValues<ServiceFrequency>())
                            {
                                <option value="@freq">@freq</option>
                            }
                        </InputSelect>
                    </div>

                    <!-- Pest Types (Flags) -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3">
                            Pest Types Covered <span class="text-red-500">*</span>
                        </label>
                        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                            @foreach (var pest in PestTypeOptions)
                            {
                                var isChecked = (model.PestTypes & pest.Value) != 0;
                                <label class="@(isChecked
                                    ? "border-emerald-500 bg-emerald-50 text-emerald-700"
                                    : "border-gray-200 bg-white text-gray-600")
                                    flex items-center gap-2 p-3 rounded-xl border-2 cursor-pointer
                                    transition-all hover:border-emerald-400 select-none text-sm font-medium">
                                    <input type="checkbox"
                                           checked="@isChecked"
                                           @onchange="e => TogglePestType(pest.Value, (bool)e.Value!)"
                                           class="rounded text-emerald-600 focus:ring-emerald-500"/>
                                    @pest.Label
                                </label>
                            }
                        </div>
                    </div>
                </section>

                <!-- Special Instructions -->
                <section class="px-8 py-6">
                    <h2 class="text-sm font-semibold text-emerald-700 uppercase tracking-wider mb-4">
                        Additional Notes
                    </h2>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Special Instructions
                            <span class="text-gray-400 font-normal">(optional)</span>
                        </label>
                        <InputTextArea @bind-Value="model.SpecialInstructions"
                                       rows="4"
                                       placeholder="e.g. Use pet-safe treatments only. Access via rear gate — code 1234."
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                              focus:ring-2 focus:ring-emerald-500 focus:border-transparent
                                              transition text-sm resize-none"/>
                        <ValidationMessage For="() => model.SpecialInstructions" class="text-red-500 text-xs mt-1"/>
                    </div>
                </section>

                <!-- Error Banner -->
                @if (!string.IsNullOrEmpty(serverError))
                {
                    <div class="mx-8 mb-4 px-4 py-3 bg-red-50 border border-red-200 rounded-lg
                                flex items-start gap-2 text-sm text-red-700">
                        <svg class="w-4 h-4 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                  clip-rule="evenodd"/>
                        </svg>
                        @serverError
                    </div>
                }

                <!-- Actions -->
                <div class="px-8 py-5 bg-gray-50 flex justify-end gap-3">
                    <button type="button"
                            @onclick='() => Nav.NavigateTo("/contracts")'
                            class="px-5 py-2.5 rounded-lg border border-gray-300 text-sm font-medium
                                   text-gray-700 bg-white hover:bg-gray-50 transition">
                        Cancel
                    </button>
                    <button type="submit"
                            disabled="@isSaving"
                            class="px-6 py-2.5 rounded-lg bg-emerald-600 text-white text-sm font-semibold
                                   hover:bg-emerald-700 disabled:opacity-60 disabled:cursor-not-allowed
                                   transition shadow-sm flex items-center gap-2">
                        @if (isSaving)
                        {
                            <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
                                <path class="opacity-75" fill="currentColor"
                                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"/>
                            </svg>
                        }
                        @(isSaving ? "Saving..." : "Create Contract")
                    </button>
                </div>

            </EditForm>
        </div>
    </div>
</div>

@code {
    private readonly ContractFormModel model = new()
    {
        StartDate = DateTime.Today,
        EndDate = DateTime.Today.AddYears(1)
    };

    private bool isSaving;
    private string? serverError;

    private static readonly (string Label, PestType Value)[] PestTypeOptions =
    [
        ("Rodents",  PestType.Rodents),
        ("Termites", PestType.Termites),
        ("Insects",  PestType.Insects),
        ("Bedbugs",  PestType.Bedbugs),
    ];

    private void TogglePestType(PestType flag, bool enabled)
    {
        model.PestTypes = enabled
            ? model.PestTypes | flag
            : model.PestTypes & ~flag;
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        serverError = null;

        try
        {
            var request = new CreateContractRequest(
                model.CustomerName!,
                model.PropertyAddress!,
                model.StartDate,
                model.EndDate,
                model.AnnualFee,
                model.ServiceFrequency,
                model.PestTypes,
                model.SpecialInstructions
            );

            var response = await Http.PostAsJsonAsync("/api/contracts", request);

            if (response.IsSuccessStatusCode)
                Nav.NavigateTo("/contracts");
            else
            {
                var err = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                serverError = err?.Error ?? "An unexpected error occurred.";
            }
        }
        catch (Exception ex)
        {
            serverError = $"Request failed: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    /// <summary>Local form model with DataAnnotations for Blazor client-side validation.</summary>
    private sealed class ContractFormModel
    {
        [Required(ErrorMessage = "Customer name is required.")]
        [MaxLength(200)]
        public string? CustomerName { get; set; }

        [Required(ErrorMessage = "Property address is required.")]
        [MaxLength(500)]
        public string? PropertyAddress { get; set; }

        public DateTime StartDate { get; set; }
        public DateTime EndDate { get; set; }

        [Range(0.01, 1_000_000, ErrorMessage = "Annual fee must be between $0.01 and $1,000,000.")]
        public decimal AnnualFee { get; set; }

        public ServiceFrequency ServiceFrequency { get; set; }
        public PestType PestTypes { get; set; }

        [MaxLength(1000)]
        public string? SpecialInstructions { get; set; }
    }

    private sealed record ErrorResponse(string Error);
}
